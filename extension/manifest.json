{
  "name": "Collab",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Collaboratively surf the web. ",
  "browser_action": {
    "default_icon": {                    // optional
      "19": "images/button.png",           // optional
      "38": "images/button.png"            // optional
    },
    "default_title": "Start collaborative browsing",      // optional; shown in tooltip
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["jquery.js", "socket.io.js", "background.js"],
      "persistent": true
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "pageCapture"
  ]
}

